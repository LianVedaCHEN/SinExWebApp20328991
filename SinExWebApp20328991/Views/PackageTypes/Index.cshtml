@model IEnumerable<SinExWebApp20328991.Models.PackageType>

@{
    ViewBag.Title = "Package Types";
}

<h2>Package Types</h2>

<p>
   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
            @foreach (var sizeInfo in item.PackageTypeSizes)
            {
                <p>
                    (Size: @Html.DisplayFor(modelItem => sizeInfo.size); Weight limit: @Html.DisplayFor(modelItem => sizeInfo.limit))
                </p>

            }
        </td>
        <td>
        </td>
    </tr>
}

</table>
